<Window x:Class="TaskLibrary.View.BookDistributorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BookDistributorsWindow" Height="120" Width="170">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Введите артикул" FontSize="16" 
               FontWeight="Medium" HorizontalAlignment="Center"></Label>
        <TextBox Name="BookSearcher" Grid.Row="1" FontSize="16" FontWeight="Medium" 
                 HorizontalAlignment="Center" Width="150"></TextBox>
        <Button Grid.Row="2" Content="OK" FontSize="16" FontWeight="Medium" 
                HorizontalAlignment="Center" Click="GetBookArticleButtonClick" Height="30" Width="50"></Button>
    </Grid>
</Window>
